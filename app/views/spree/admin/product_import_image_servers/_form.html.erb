<%= f.field_container :name, class: %w[form-group col-md-8] do %>
    <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
    <%= f.text_field :name, :required => true, :class => 'form-control' %>
<% end %>

<%= f.field_container :protocol, class: %w[form-group col-md-8] do %>
    <%= f.label :protocol, Spree.t(:protocol) %> <span class="required">*</span>
    <%= f.select :protocol, Spree::ProductImportImageServer::PROTOCOLS.collect { |p| [p[:label], p[:name]] }, {}, { :required => true, :class => 'form-control' } %>
<% end %>

