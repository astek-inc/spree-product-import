<% content_for :page_title do %>
    <%= link_to Spree.t(:product_imports), admin_product_imports_path %> / <%= @product_import.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_import_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
        <%= link_to_with_icon 'edit', Spree.t(:details), spree.edit_admin_product_import_url(@product_import) %>
    <% end if can?(:admin, Spree::ProductImport) %>
    <%= content_tag :li, class: ('active' if current == :product_import_image_locations) do %>
        <%= link_to_with_icon 'picture', Spree.t(:image_locations), spree.admin_product_import_product_import_image_locations_url(@product_import) %>
    <% end if can?(:admin, Spree::ProductImportItem) %>
    <%= content_tag :li, class: ('active' if current == :product_import_items) do %>
        <%= link_to_with_icon 'certificate', Spree.t(:import_items), spree.admin_product_import_product_import_items_url(@product_import) %>
    <% end if can?(:admin, Spree::ProductImportItem) %>
  </ul>
<% end %>
