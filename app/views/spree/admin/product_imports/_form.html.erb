<div class="row">
  <%= f.field_container :name, class: %w[form-group col-md-8] do %>
    <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
    <%= f.text_field :name, :required => true, :class => 'form-control' %>
  <% end %>

  <%= f.field_container :product_import_image_server, :class => %w[form-group col-md-8] do %>
      <%= f.label :product_import_image_server, t(:product_import_image_server)%> <span class="required">*</span>
      <%= f.select :product_import_image_server_id, @product_import_image_servers.collect { |s| [s.name, s.id] }, {}, { :required => true, :class => 'form-control' } %>
  <% end %>

  <%= f.field_container :csv_file, class: %w[form-group col-md-8] do %>
    <%= f.label :csv_file, Spree.t(:csv_file) %> <span class="required">*</span>
    <% unless @product_import.csv_file.nil? %>
        <p style="margin-left: 20px; font-style: italic;"><%= @product_import.csv_file %></p>
    <% end %>
      <% unless @product_import.state == Spree::ProductImport::STATE_COMPLETE %>
        <%= f.file_field :csv_file, :required => @product_import.csv_file.nil?, :class => 'form-control' %>
      <% end %>
  <% end %>
</div>
